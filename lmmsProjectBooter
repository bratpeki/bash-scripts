
#!/bin/bash

# Name:        lmmsProjectBooter
# Author:      Petar KatiÄ‡ (bratpeki)
# Description: Load projects from a specific directory into LMMS

currDir="$(pwd)"
cd $HOME/Documents/lmms/projects

fileInQuestion=$(find . -name "*.mmpz" | dmenu -l 25 -fn "Monospace:bold:pixelsize=16")

if [ -z "$fileInQuestion" ]
then
	echo "No selection, exiting..."
else
	echo "Opening \"$fileInQuestion...\""
	lmms "$fileInQuestion"
fi

cd $currDir

