#!/bin/bash

# Name:        wttrcode
# Author:      Petar KatiÄ‡ (bratpeki)
# Description: Read wetter information via curl using location codes

locationOfFile=$(which wttrcode)
# This command relies on the fact that the
# script path is added to the PATH variable
locationOfFile=${locationOfFile%wttrcode}deps/wetterLocs

dmenu -i -l 25 < "$locationOfFile" | xargs -I {} curl wttr.in/{}
